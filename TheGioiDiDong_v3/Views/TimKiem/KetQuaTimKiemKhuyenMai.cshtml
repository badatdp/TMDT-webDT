@using TheGioiDiDong_v3.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<KhuyenMai>
@{
    ViewBag.Title = "Tìm kiếm khuyến mãi";
    Layout = "~/Views/Shared/_LayoutForPage.cshtml";
}
@section Legend{
    <strong>Khuyến mãi</strong>
}
@section Title{
    Khuyến mãi
}
@using (Html.BeginForm("KetQuaTimKiemKhuyenMai", "TimKiem", FormMethod.Post))
{
    //<form action="#" method="post" name="frmTimKiemIndex" onsubmit="return checkTimKiemIndex()">
    @*<input type="search" name="txtTimKiem" placeholder="Nhập thông tin cần tìm.." size="40">*@
    @Html.TextBox("txtTimKiem", "", new { @placeholder = "Nhập tên khuyến mãi cần tìm...", @style = "width:300px;height:35px;margin-left:25px;" })
    <button class="w3-btn w3-blue w3-hover-red" type="submit"> Tìm kiếm</button>
    //</form>
}
<h3>@Html.Raw(ViewBag.ThongBao)</h3>
@foreach (var item in Model)
{
    <div class="quangcao w3-card-4">
        <a href="#">
            <div class="hinhQC"><img src="@Url.Content("../Content/image/" + item.hinhKM) " width="300" height="100"></div>
            <div class="ndQC">
                <div class="thoihanQC">@item.thoihan</div>
                <div class="tenQC">@item.tenKM </div>
            </div>
        </a>
    </div>
}
@if (Model.PageCount > 1)
{
    <div class="phantrang">
        @Html.PagedListPager(Model, page => Url.Action("KetQuaTimKiemKhuyenMai", "TimKiem", new { page = page ,@sTuKhoa=ViewBag.TuKhoa}))
    </div>
}
<style>
    div.phantrang {
        text-align: center;
        float: left;
        margin-left: 39%;
        margin-right: 39%;
    }

        div.phantrang ul li {
            display: inline;
            font-size: 17px;
            font-weight: bold;
            padding: 10px;
        }

            div.phantrang ul li:not(.active):hover {
                background-color: #fbe4e4;
            }

    li.active {
        background-color: pink;
    }
</style>



