@using TheGioiDiDong_v3.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<TuyenDung>
@{
    ViewBag.Title = "KetQuaTimKiemTuyenDung";
    Layout = "~/Views/Shared/_LayoutForPage.cshtml";
}
@section Legend{
    <strong>Tuyển dụng</strong>
}
@section Title{
    Tuyển dụng
}
<span style="float:left;">
    @using (Html.BeginForm("KetQuaTimKiemTuyenDung", "TimKiem", FormMethod.Post))
    {
        //<form action="#" method="post" name="frmTimKiemIndex" onsubmit="return checkTimKiemIndex()">
        @*<input type="search" name="txtTimKiem" placeholder="Nhập thông tin cần tìm.." size="40">*@
        @Html.TextBox("txtTimKiem", "", new { @placeholder = "Nhập công việc cần tìm...", @style = "width:250px;height:35px;margin-left:50px;" })
        <button class="w3-btn w3-blue w3-hover-red" type="submit"> Tìm kiếm</button>
        //</form>
    }
</span>
<h3>@Html.Raw(ViewBag.ThongBao)</h3>
<div class="tuyendung">
    <table>
        <tr>
            <th>Vị trí đang tuyển</th>
            <th>Mức lương</th>
            <th>Số lượng tuyển</th>
            <th>Nơi làm việc</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="vitri"><a href="#">@item.vitri</a>    <span class="vitrihot">HOT</span></td>
                <td class="luong">@item.mucluong </td>
                <td class="soluong">@item.soluong người </td>
                <td class="noilamviec">@item.noilamviec </td>
            </tr>
        }
    </table>
</div>
@if (Model.PageCount > 1)
{
    <div class="phantrang">
        @Html.PagedListPager(Model, page => Url.Action("KetQuaTimKiemTuyenDung", "TimKiem", new { page = page, @sTuKhoa=ViewBag.TuKhoa }))
    </div>
}
<style>
    div.phantrang {
        text-align: center;
        float: left;
        margin-left: 39%;
        margin-right: 39%;
    }

        div.phantrang ul li {
            display: inline;
            font-size: 17px;
            font-weight: bold;
            padding: 10px;
        }

            div.phantrang ul li:not(.active):hover {
                background-color: #fbe4e4;
            }

    li.active {
        background-color: pink;
    }
</style>


