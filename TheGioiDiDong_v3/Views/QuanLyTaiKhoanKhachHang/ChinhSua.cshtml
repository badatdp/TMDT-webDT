@model TheGioiDiDong_v3.Models.KhachHang

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CHỈNH SỬA THÔNG TIN KHÁCH HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.maKH)
        <div class="form-group">
            @Html.LabelFor(model => model.ten, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ten)
                @Html.ValidationMessageFor(model => model.ten)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ngaysinh, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model=>model.ngaysinh)
                @Html.ValidationMessageFor(model => model.ngaysinh)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.email, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.email)
                @Html.ValidationMessageFor(model => model.email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tenDN, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenDN)
                @Html.ValidationMessageFor(model => model.tenDN)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.matkhau, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.matkhau)
                @Html.ValidationMessageFor(model => model.matkhau)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.xacnhanMK, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.xacnhanMK)
                @Html.ValidationMessageFor(model => model.xacnhanMK)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dienthoai, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dienthoai)
                @Html.ValidationMessageFor(model => model.dienthoai)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.gioitinh, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.gioitinh, new List<SelectListItem>() { new SelectListItem { Text = "Nam", Value = "True", Selected = true }, new SelectListItem { Text = "Nữ", Value = "False", Selected = false } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.diachi, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.diachi)
                @Html.ValidationMessageFor(model => model.diachi)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.role, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.role, new List<SelectListItem>() { new SelectListItem { Text = "Khách Hàng", Value = "2", Selected = true }, new SelectListItem { Text = "Admin", Value = "1", Selected = false } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btnSubmit" type="submit" value="Lưu" style=" margin-top: 1%; margin-left: 25%; width: 100px; height: 50px;" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
