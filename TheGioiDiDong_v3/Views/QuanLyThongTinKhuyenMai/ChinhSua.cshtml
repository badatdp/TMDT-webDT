@model TheGioiDiDong_v3.Models.KhuyenMai

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CHỈNH SỬA THÔNG TIN KHUYẾN MÃI</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.maKM)

        <div class="form-group">
            @Html.LabelFor(model => model.tenKM, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenKM)
                @Html.ValidationMessageFor(model => model.tenKM)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.hinhKM, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.hinhKM)
                @Html.ValidationMessageFor(model => model.hinhKM)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.thoihan, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.thoihan)
                @Html.ValidationMessageFor(model => model.thoihan)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.chitiet, new { style = "text-align:left", @class = "control-label col-md-2" })
            <br />
            <br />
            <div class="col-md-10">
                <textarea name="chitiet">@Model.chitiet</textarea>
                @Html.ValidationMessageFor(model => model.chitiet)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btnSubmit" type="submit" value="Lưu" style=" margin-top: 1%; margin-left: 25%; width: 100px; height: 50px;" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
