@model TheGioiDiDong_v3.Models.KhuyenMai

@{
    ViewBag.Title = "Xoá";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    dt, dd {
        margin-bottom: 10px;
        color: black;
    }

    dt {
        color: #080515;
        font-weight: normal;
        color: #03052c;
    }
</style>
<h2>XOÁ KHUYẾN MÃI</h2>

<h3>Bạn có thật sự muốn xoá khuyến mãi này?</h3>
<div style="font-size:19px;margin:10px;">
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <img src="@Url.Content("../Content/image/"+Model.hinhKM)" width="500" height="200">
        </dd>
        <dt style="text-align: left;">
            @Html.DisplayNameFor(model => model.tenKM)
        </dt>

        <dd>
            <b> @Html.DisplayFor(model => model.tenKM)</b>
        </dd>
        <dt style="text-align: left;">
            @Html.DisplayNameFor(model => model.thoihan)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.thoihan)
        </dd>

        <dt style="text-align: left;">
            @Html.DisplayNameFor(model => model.chitiet)
        </dt>

        <dd style="color:#423c3c">
            @Html.Raw(Model.chitiet)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>
