@model TheGioiDiDong_v3.Models.ChiTietDonHang

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>THÊM MỚI CHI TIẾT ĐƠN HÀNG</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.madonhang, "madonhang", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("madonhang", String.Empty)*@
                 @Html.TextBoxFor(model=>model.madonhang)
                @Html.ValidationMessageFor(model => model.madonhang)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.maSP, "maSP", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("maSP", String.Empty)
                @Html.ValidationMessageFor(model => model.maSP)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.soluong, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.soluong)
                @Html.ValidationMessageFor(model => model.soluong)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dongia, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dongia)
                @Html.ValidationMessageFor(model => model.dongia)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
