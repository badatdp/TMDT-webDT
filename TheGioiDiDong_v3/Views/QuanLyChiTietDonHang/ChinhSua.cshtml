@model TheGioiDiDong_v3.Models.ChiTietDonHang

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>CHỈNH SỬA CHI TIẾT ĐƠN HÀNG</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @*@Html.HiddenFor(model => model.madonhang)

        @Html.HiddenFor(model => model.maSP)*@
        <div class="form-group">
            @Html.LabelFor(model => model.madonhang, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.madonhang,new{ @readonly=true})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.maSP, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.maSP, new { @readonly = true })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.soluong, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.soluong)
                @Html.ValidationMessageFor(model => model.soluong)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dongia, new { style = "text-align:left", @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.dongia)
                @*@Html.ValidationMessageFor(model => model.dongia)*@
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btnSubmit" type="submit" value="Lưu" style=" margin-top: 1%; margin-left: 25%; width: 100px; height: 50px;" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
